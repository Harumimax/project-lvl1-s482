{
    "name": "harumimax/brain-game",
    "description": "Mini brain-game",
    "type": "project",
    "authors": [
        {
            "name": "harumimax",
            "email": "harumimax@gmail.com"
        }
    ],
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
      },
    "require": {
        "wp-cli/php-cli-tools": "^0.11.11"
    },
    "bin": [
        "bin/brain-games",
        "bin/brain-even",
        "bin/brain-calc",
        "bin/brain-gcd",
        "bin/brain-progression",
        "bin/brain-prime"
    ],
    "autoload": {
        "files": [
            "src/Cli.php",
            "src/checkAnswer.php",
            "src/play.php",
            "src/games/correctAnswerCalc.php",
            "src/games/correctAnswerGcd.php",
            "src/games/correctAnswerEven.php",
            "src/games/correctAnswerPrime.php",
            "src/games/correctAnswerProgression.php"
        ],
        "psr-4": {
            "BrainGames\\src\\": "src",
            "BrainGames\\src\\games\\": "src/games"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4"
    }
}
